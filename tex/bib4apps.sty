
% make bibliography small
\renewcommand*{\bibfont}{\footnotesize}

% remove the following fields from bibliography
% \AtEveryBibitem{\clearfield{title}\clearfield{eid}\clearfield{eprint}\clearfield{month}}

% remove in:
\renewbibmacro{in:}{}

% remove p. from bibliography, and page range
\DeclareFieldFormat{postnote}{#1}
\DeclareFieldFormat{multipostnote}{#1}
\DeclareFieldFormat{pages}{\mkfirstpage[]{#1}}

\DeclareFieldFormat{journaltitle}{#1}

% remove dots
\renewcommand*{\newunitpunct}{\addcomma\space}
\renewcommand*{\finentrypunct}{\space}
\renewcommand*{\finalnamedelim}{\addspace\&\space}

% inline bibliography
\defbibenvironment{bibliography}
  {\noindent}
  {\unspace}
  {\printtext[labelnumberwidth]{\printfield{prefixnumber} \printfield{labelnumber}}\addspace}

% use only last name in bibliography
\DeclareNameFormat{lastname}{%
  \usebibmacro{name:family}
   {\namepartfamily}
   {\namepartgiveni}
   {\namepartprefix}
   {\namepartsuffix}%
  \usebibmacro{name:andothers}}
\DeclareNameAlias{author}{lastname}

% print arxiv if no volume info (proxy for published)
\newbibmacro*{journal}{%
  \iffieldundef{volume}
    {\printfield{eprint}}
    {\printtext[journaltitle]{%
       \printfield[myplain]{journaltitle}%
       \setunit{\subtitlepunct}%
       \printfield[myplain]{journalsubtitle}}}}

% format arxiv all in same font
\DeclareFieldFormat{eprint}{\printtext{arXiv:}{#1}}
  
% select fields to appear in bibliography
\DeclareBibliographyDriver{article}{%
  \printnames{author}%
  \finentry
  \printfield{year}%
  \newunit
  \usebibmacro{journal}
  \newunit
  \printfield{volume}%
  \newunit
  \printfield{pages}%
  \finentry
  \printtext{$\bullet$}}

